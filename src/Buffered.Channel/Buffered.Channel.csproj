<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.0</Version>
    <Description>Implements buffered consumer using System.Threading.Channels.Channel&lt;T&gt;.
Consumer callback methods are called when buffer limit is reached or time reached flush interval.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/mantasaudickas/Buffered.Channel</RepositoryUrl>
    <PackageProjectUrl>https://github.com/mantasaudickas/Buffered.Channel</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Threading.Channels" Version="4.7.0" />
  </ItemGroup>

</Project>
